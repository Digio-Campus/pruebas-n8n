# ======================================
# N8N Environment Configuration Example
# ======================================
# Copia este archivo como .env y configura tus valores reales
# 丘멆잺  NUNCA commitees el archivo .env real con credenciales

# ==========================================
# 游냡 DOCKER & N8N BASIC CONFIGURATION
# ==========================================

# Puerto donde correr치 n8n (por defecto 5678)
N8N_PORT=5678

# Zona horaria
TIMEZONE=Europe/Madrid

# Nivel de logs (error, warn, info, verbose, debug)
N8N_LOG_LEVEL=info

# URL base para webhooks
WEBHOOK_URL=http://localhost:5678

# ==========================================
# 游댏 AUTHENTICATION & SECURITY
# ==========================================

# Activar autenticaci칩n b치sica (true/false)
N8N_BASIC_AUTH_ACTIVE=true

# Usuario para login b치sico
N8N_BASIC_AUTH_USER=admin

# Contrase침a para login b치sico (CAMBIAR!)
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# Clave de encriptaci칩n para credenciales (GENERAR UNA NUEVA!)
# Genera una con: openssl rand -base64 32
N8N_ENCRYPTION_KEY=your_encryption_key_here_generate_a_new_one

# ==========================================
# 游댕 DATABASE CONFIGURATION
# ==========================================

# El docker-compose.yml ya configura una base de datos PostgreSQL
# Aqu칤 puedes la autenticaci칩n para conectarte a ella
N8N_DATABASE_USER=n8n_user
N8N_DATABASE_PASSWORD=your_database_password_here